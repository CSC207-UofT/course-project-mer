<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/add_item_background"
        android:layout_width="393dp"
        android:layout_height="77dp"
        android:background="#00FFFFFF"
        android:baselineAlignBottom="false"
        android:contentDescription="@string/track_item_background"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        app:srcCompat="@drawable/list_item"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/add_item_name"
        android:layout_width="330dp"
        android:layout_height="22dp"
        android:fontFamily="@font/aldrich"
        android:textAlignment="viewStart"
        android:textColor="@color/pink"
        android:textSize="18sp"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="@+id/add_item_background"
        app:layout_constraintEnd_toEndOf="@+id/add_item_background"

        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="@+id/add_item_background"
        app:layout_constraintTop_toTopOf="@+id/add_item_background"
        app:layout_constraintVertical_bias="0.436"
        tools:text="" />

    <TextView
        android:id="@+id/add_item_artist"
        android:layout_width="258dp"
        android:layout_height="23dp"
        android:fontFamily="@font/aldrich"
        android:textAlignment="viewStart"
        android:textColor="@color/pink"
        android:textSize="16sp"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="@+id/add_item_background"
        app:layout_constraintEnd_toEndOf="@+id/add_item_background"

        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="@+id/add_item_background"
        app:layout_constraintTop_toTopOf="@+id/add_item_background"
        app:layout_constraintVertical_bias="0.888"
        tools:text="" />

    <TextView
        android:id="@+id/add_item_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:textAlignment="viewStart"
        android:textColor="@color/pink"
        app:layout_constraintBottom_toBottomOf="@+id/add_item_background"
        app:layout_constraintEnd_toEndOf="@+id/add_item_background"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="@+id/add_item_background"
        app:layout_constraintTop_toTopOf="@+id/add_item_background"
        app:layout_constraintVertical_bias="0.859"
        tools:text="" />

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/pink"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/add_item_background"
        app:layout_constraintEnd_toEndOf="@+id/add_item_background"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/add_item_background"
        app:layout_constraintTop_toTopOf="@+id/add_item_background"
        app:layout_constraintVertical_bias="0.31" />

</androidx.constraintlayout.widget.ConstraintLayout>