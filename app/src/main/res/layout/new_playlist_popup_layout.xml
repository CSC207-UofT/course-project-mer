<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rec_background_black">

    <EditText
        android:id="@+id/new_playlist_name"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:autofillHints="password"
        android:fontFamily="@font/aldrich"
        android:hint="@string/playlist_name"
        android:inputType="text"
        android:lines="1"
        android:maxLength="20"
        android:textAlignment="center"
        android:textColor="@color/pink"
        android:textColorHint="@color/half_pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.411" />

    <ImageButton
        android:id="@+id/new_playlist_go"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="36dp"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_playlist_name"
        app:layout_constraintVertical_bias="0.148"
        app:srcCompat="@drawable/go"/>

</androidx.constraintlayout.widget.ConstraintLayout>