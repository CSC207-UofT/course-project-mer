<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <ImageView
        android:id="@+id/image_signup"
        android:layout_width="250dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/signup"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17" />

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/rec_background"
        android:fontFamily="@font/aldrich"
        android:hint="@string/password"
        android:textAlignment="center"
        android:textColor="@color/pink"
        android:textColorHint="@color/half_pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_signup"
        app:layout_constraintVertical_bias="0.353"
        android:lines="1"
        android:maxLength="20"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/signup_username"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/rec_background"
        android:fontFamily="@font/aldrich"
        android:hint="@string/username"
        android:textAlignment="center"
        android:textColor="@color/pink"
        android:textColorHint="@color/half_pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_signup"
        app:layout_constraintVertical_bias="0.218"
        android:lines="1"
        android:maxLength="20"
        android:inputType="text"/>

    <ImageButton
        android:id="@+id/signup_go"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="160dp"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_password"
        app:layout_constraintVertical_bias="0.345"
        app:srcCompat="@drawable/go" />

    <ImageButton
        android:id="@+id/signup_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.963"
        app:srcCompat="@drawable/back" />


</androidx.constraintlayout.widget.ConstraintLayout>